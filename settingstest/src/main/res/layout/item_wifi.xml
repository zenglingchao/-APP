<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="378px"
    android:background="@drawable/background_dialog"
    android:layout_height="248px"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24px"
        android:layout_marginTop="30px"
        android:layout_marginBottom="20px"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="22px"
        android:layout_marginTop="30px"
        android:layout_marginBottom="20px"
        android:textColor="#b0ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69px">

        <TextView
            android:id="@+id/positive_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22px"
            android:textColor="@drawable/selector_checked_box"
            android:background="@drawable/selector_dialog_btn"/>

        <TextView
            android:id="@+id/negative_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="22px"
            android:textColor="@drawable/selector_dialog_btn_text_color"
            android:background="@drawable/selector_dialog_btn"/>

    </LinearLayout>

</LinearLayout>